<h1>Confirm Account Deletion</h1>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:method => :delete, :id => "delete_user", :name=>"delete_form", class: "registration"}) do |f| %>

<% if resource.errors.present? %>
<div class="alert alert-danger">
	<%= devise_error_messages! %>
</div>
<% end %>

<% if @delete_denied %>
<div class="alert alert-danger">
	Please confirm that you wish to delete your user account. Your account will
	not be deleted unless you check the checkbox to confirm that you would like
	to delete it.
</div>
<% end %>

<div class="form-group row">
	<div class="col-md-12">
	<p>Please confirm that you wish to destroy your user account. This cannot
	be undone.</p>
	<p><label for="confirm-account-delete"><input type="checkbox" id="confirm-account-delete" name="delete_token" value="<%= session[:account_delete_token]%>"> I am sure I wish to delete my account.</label>
	</div>
	<div class="col-md-6">
	<div class="col-xs-6"><%= f.submit "Delete my account", class: "btn btn-danger btn-block btn-lg" %></div>
	</div>
</div>
<% end -%>

<script>
$(function() {
	$('.field_with_errors').parent().removeClass('required').addClass('has-error'); //allows icon to change color appropriately for validation
});
</script>
