<div class="modal fade" id="emailUsersDialog" tabindex="-1" aria-hidden="true">
<div class="modal-dialog" role="dialog" aria-labelledby="modalTitle">
	<div class="modal-content">
	<div class="modal-header">
		{{#button "close" class="close" data-dismiss="modal" aria-hidden="true"}}&times;{{/button}}
		<h4 class="modal-title" id="modalTitle">{{email_modal_title}}</h4>
	</div>
	<div class="modal-body">
		<form action="{{email_action}}" method="post" role="form">
			<input name="authenticity_token" type="hidden" value="{{token}}">
			{{#if target_email_address}}
				<div class="form-group">
					<label for="target-email-address">To</label>
					<input type="text" class="form-control" name="email" id="target-email-address" readonly="true" value={{target_email_address}}>
				</div>
			{{/if}}
			<div class="form-group">
				<label for="emailSubject">Subject</label>
				<input type="text" class="form-control" name="subject" id="emailSubject" placeholder="Subject">
			</div>
			<div class="form-group">
				<label for="emailBody">Body</label>
				<textarea class="form-control" rows="10" name="body" id="emailBody" placeholder="Email body"></textarea>
			</div>
		</form>
	</div>
	<div class="modal-footer">
		{{#button "close" class="btn btn-default" data-dismiss="modal"}}Cancel{{/button}}
		{{#button "submit" class="btn btn-primary" id="sendButton" disabled=true}}Send Email{{/button}}
	</div>
	</div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
</div><!-- /.modal -->
