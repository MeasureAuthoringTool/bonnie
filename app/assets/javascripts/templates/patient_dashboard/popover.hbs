{{#if rootPrecondition}}
  {{#if rootPrecondition.preconditions }}
    {{#each rootPrecondition.preconditions}}
      {{view "PreconditionLogic" precondition=this parentPrecondition=../rootPrecondition parentNegation=../rootPrecondition.negation measure=../measure}}
    {{/each}}
  {{else}}
    <ul>
      <li>
        {{#if aggregator}}{{translate_aggregator aggregator}}: {{/if}} {{view "DataCriteriaLogic" reference=rootPrecondition.reference measure=../measure tag="span"}}
      </li>
    </ul>
  {{/if}}
{{else}}
  No Children Data Criteria
{{/if}}
<ul>
  {{#collection variables tag="div"}}
    <li>
      <span class="{{source_data_criteria}} rationale-target"> <b>${{description}} = </b><span class="sr-only sr-highlight-status"></span></span>{{view "DataCriteriaLogic" reference=source_data_criteria expandVariable=true measure=../measure tag="span"}}
    </li>
  {{/collection}}
</ul>
