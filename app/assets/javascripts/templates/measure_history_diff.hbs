<div class="measure-diff">
  {{#if diffView}}
    <div class="row">
      <div class="col-md-6"><h3><strong>{{diff.left.cms_id}}</strong> @ {{diff.left.updateTime}}</h3><small>{{diff.left.hqmf_id}}</small></div>
      <div class="col-md-6 text-right"><h3><strong>{{diff.right.cms_id}}</strong> @ {{diff.right.updateTime}}</h3><small>{{diff.right.hqmf_id}}</small></div>
    </div>
    <div class="measure-viz rationale panel-group">
      
    {{#each diffView}}
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title panel-population">
            <a data-toggle="collapse" href="#collapseDiff{{@index}}">
              <div>
                <span class="population-label rationale-target"><b>{{this.title}}: </b><span class="sr-only sr-highlight-status"></span></span>
                <div class="pull-right">
                  <i class="fa fa-lg fa-angle-down toggle-icon" aria-hidden="true"></i>
                  <span class="sr-only">toggle {{this.title}}</span>
                </div>
              </div>
            </a>
          </h4>
        </div>
        <div id="collapseDiff{{@index}}" class="panel-collapse collapse in">
          <div class="panel-body"><div class="row">
            <div class="col-md-6">
              {{{this.left}}}
            </div>
            <div class="col-md-6">
              {{{this.right}}}
            </div>
          </div></div>
        </div>
      </div>
    {{/each}}
  {{else}}
    <p>Loading comparison...</p>
  {{/if}}
</div>
