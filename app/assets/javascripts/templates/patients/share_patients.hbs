<div class="modal fade" id="sharePatientsDialog" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog" role="dialog" aria-labelledby="modalTitle">
    <div class="modal-content">
      <form role="form" method="post" action="/patients/share_patients">
        <input name="authenticity_token" type="hidden" value="{{token}}">
        <div class="modal-header">
          <h1 class="modal-title" id="modalTitle">Share Patients Across Measures</h1>
        </div>
        <div class="modal-body">
          <div class="alert alert-info">Please select which measures you would like to transfer all patients to</div>
          <div class="form-group">
            <label for="measureTitles" class="control-label">Measures:</label>
            <div id="measureTitles">
              <input type="hidden" name="hqmf_set_id" value="{{hqmf_set_id}}" />
              {{#each shareableMeasures.models}}
              {{#with attributes}}
              <div class="form-group">
                <div class="checkbox">
                  <label>
                    <input id="title{{@index}}_{{@cid}}" type="checkbox" name="selected[]"
                      value={{cqmMeasure.hqmf_set_id}} checked="true"> {{cqmMeasure.cms_id}} - {{cqmMeasure.title}}
                  </label>
                </div>
              </div>
              {{/with}}
              {{/each}}
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" id="sharePatientsSubmit" class="btn btn-primary">Done</button>
          <button type="button" id="sharePatientsCancel" class="btn btn-default">Cancel</button>
        </div>
    </div>
    </form>
  </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
</div><!-- /.modal -->