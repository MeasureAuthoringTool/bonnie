<div class="form-inline tab-pane">
  <fieldset>
    <legend>Expected Value</legend>
    {{#each currentCriteria}}
      {{#ifCond key "==" "OBSERV"}}
        {{#if isRatio}}
          <br/>
          {{#each ../../../ratioObserv}}
            <div class="form-group">
              <label for="DENOM_{{@index}}" class="checkbox-inline">
                  Episode {{sum @index 1}}- denom observ
              </label>
              <input type="number" id="DENOM_{{@index}}" name="OBSRV" min="0" value="{{this.denomObs}}">
            </div>
            <div class="form-group">
              <label for="NUMER_{{@index}}" class="checkbox-inline">
                  Episode {{sum @index 1}}- numer observ
              </label>
              <input type="number" id="NUMER_{{@index}}" name="OBSRV" min="0" value="{{this.numerObs}}">
            </div>
          {{/each}}
        {{else}}
          <div class="form-group">
              <label for="{{../key}}_{{@index}}" class="checkbox-inline">{{displayName}}</label>
              {{#each ../../../OBSERV}}
              <input type="number" id="{{../key}}_{{@index}}" name="OBSRV" min="0" value="{{this}}">
            {{/each}}
          </div>
        {{/if}}
      {{else}}
        {{#if isEoC}}
          <div class="form-group">
            <label for="{{key}}_{{@cid}}">{{displayName}}</label>
            <input type="number" id="{{key}}_{{@cid}}" name="{{key}}" min="0">
          </div>
        {{else}}
          <div class="form-group">
            <label for="{{key}}_{{@cid}}" class="checkbox-inline">{{displayName}}</label>
            <input type="checkbox" id="{{key}}_{{@cid}}" name="{{key}}">
          </div>
        {{/if}}
      {{/ifCond}}
    {{/each}}
  </fieldset>
</div>
