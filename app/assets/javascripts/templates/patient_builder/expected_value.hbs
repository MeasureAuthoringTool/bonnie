<div class="expected-values">
  <h2>EXPECTED VALUE</h2>
  <form class="form-inline" role="form">
    {{#each currentCriteria}}
      {{#ifCond key "==" "OBSERV"}}
        <div class="checkbox {{#if @index}}checkbox-divider{{/if}}">
          <label class="checkbox-population" class="col-xs-1">
            {{displayName}} <input type="number" id="{{key}}" value="{{value}}">
          </label>
        </div>
      {{else}}
        {{#if isEpisodeOfCare}}
          <div class="checkbox {{#if @index}}checkbox-divider{{/if}}">
            <label class="checkbox-population">
              <input type="number" id="{{key}}" value="{{value}}"> {{displayName}}
            </label>
          </div>
        {{else}}
          <div class="checkbox {{#if @index}}checkbox-divider{{/if}}">
            <label class="checkbox-population">
              <input type="checkbox" id="{{key}}"> {{displayName}}
            </label>
          </div>
        {{/if}}
      {{/ifCond}}
    {{/each}}
  </form>
</div>