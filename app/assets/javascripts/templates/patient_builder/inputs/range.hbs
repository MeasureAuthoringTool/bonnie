<div class="row">
  <div class="form-group col-md-6 range-interval-low">
    <div class="control-label">Low Value</div>
    <div class="range-control">
      <div class="range-control-number">
        <label for="low_{{cid}}" class="sr-only">Low Value</label>
        <input type="number" name="low_value" id="low_value_{{cid}}" class="form-control" placeholder="0.0" value="{{low.value}}" />
      </div>
    </div>
  </div>

  <div class="form-group col-md-6 range-interval-high">
    <div class="control-label">High Value</div>
    <div class="range-control">
      <div class="range-control-number">
        <label for="high_{{cid}}" class="sr-only">High Value</label>
        <input type="number" name="high_value" id="high_value_{{cid}}" class="form-control" placeholder="0.0" value="{{high.value}}" />
      </div>
    </div>
  </div>

  <div class="form-group col-md-12 range-interval-high">
    <div class="control-label">Units</div>
    <div class="range-control">
      <div class="range-control-number">
        <label for="high_{{cid}}" class="sr-only">Units</label>
        <input type="text" name="unit" id="unit_{{cid}}" class="form-control" placeholder="Units" value="{{high.unit}}" />
      </div>
    </div>
  </div>
</div>
