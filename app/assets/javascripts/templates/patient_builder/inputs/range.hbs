<div class="row">
  <div class="form-group col-md-12 range-interval-low">
    <div class="control-label">Low</div>
    <div class="range-control">
      <div class="range-control-number">
        <label for="low_{{cid}}" class="sr-only">Low</label>
        <input type="number" name="low_value" id="low_value_{{cid}}" class="form-control range-input" placeholder="0.0" value="{{low.value}}" />
        <input type="text" name="low_unit" id="low_unit_{{cid}}" class="form-control range-input" placeholder="unit" value="{{low.unit}}" />
      </div>
    </div>
  </div>

  <div class="form-group col-md-12 range-interval-high">
    <div class="control-label">High</div>
    <div class="range-control">
      <div class="range-control-number">
        <label for="high_{{cid}}" class="sr-only">High</label>
        <input type="number" name="high_value" id="high_value_{{cid}}" class="form-control range-input" placeholder="0.0" value="{{high.value}}" />
        <input type="text" name="high_unit" id="high_unit_{{cid}}" class="form-control range-input" placeholder="unit" value="{{high.unit}}" />
      </div>
    </div>
  </div>
</div>
