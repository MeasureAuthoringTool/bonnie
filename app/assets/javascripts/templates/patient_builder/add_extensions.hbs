<div class="edit-extension-container">
  <div class="form-group">
    <label for="url_{{@cid}}">Url:</label>
    <input aria-describedby="url_help_{{@cid}}"
           class="form-control" id="url_{{@cid}}"
           name="url"
           type="text"
           {{#if url}}value="{{url}}" {{else}}value=""{{/if}}
           required>
    <small class="form-text text-disabled"
           id="url_help_{{@cid}}">Preferably starts with http:// or https://</small>
  </div>
  <div class="extension-value-selector col-sm-11 col-md-11 col-lg-11">
    <div class="form-group">
      <label for="value_{{@cid}}">Value:</label>
      <select class="form-control"
              id="value_{{@cid}}"
              name="value">
        <option value="">--</option>
        {{#each valueTypes}}
          <option value="{{this}}">{{this}}</option>
        {{/each}}
      </select>
    </div>
    <div class="form-group">
      <div class="input-view-container">
        {{#if showInputViewPlaceholder}}
          <div class="input-placeholder">{{selectedValueType}} type not implemented yet.</div>
        {{else}}
          {{view selectedValueTypeView}}
        {{/if}}
      </div>
    </div>
  </div>
  <div class="col-sm-1 col-md-1 col-lg-1">
    <div class="input-add">
      {{#button "addExtension" class="btn btn-primary" disabled="disabled" id="add_extension"}}
        <i class="fa fa-plus" aria-hidden="true"></i>
        <span class="sr-only">add extension</span>
      {{/button}}
    </div>
  </div>
</div>
