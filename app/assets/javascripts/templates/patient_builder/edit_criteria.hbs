<div class="criteria-type-marker">
  <i class="criteria-icon {{icon}}" aria-hidden="true"></i>
</div>
<div class="criteria-body">
  <div class="criteria-data droppable">
    <div class="criteria-details">
      <div class="row">
        <div class="col-md-6">
          <h3 class="h2-style">{{definition_title}}</h3>
          <div>{{description}}</div>
        </div>
        <div class="col-md-6  criteria-{{model.cid}}">
          <div class="pull-left">
            <div class="h2-style">Date</div>
            <div>{{start_date}}{{#if end_date}} &ndash; {{end_date}}{{/if}}</div>
          </div>
          {{#button "toggleDetails" class="close"}}
            <i class="fa fa-lg fa-angle-right" aria-hidden="true"></i>
            <span class="sr-only">Expand Data Criteria, {{definition}}, {{description}} </span>
            <span class="highlight-indicator sr-only"></span>
          {{/button}}
        </div>
      </div>
    </div>
    <form class="hide" role="form">
      <div class="clearfix">
        <div class="pull-left">
          <span class="highlight-indicator sr-only"></span>

          <p><strong>{{definition_title}}:</strong> {{description}}</p>
          <p><strong>FHIR ID:</strong> {{fhirId}}</p>
        </div>
        {{#button "toggleDetails" class="close"}}
          <i class="fa fa-lg fa-angle-down" aria-hidden="true"></i>
          <span class="sr-only">Collapse Data Criteria, {{definition}}, {{description}}</span>
        {{/button}}
      </div>

      {{#each timingAttributeViews}}
        {{view this}}
      {{/each}}

      <div class="form-group">
        <label class="control-label"><i class="fa fa-code" aria-hidden="true"></i> Codes<input class="sr-only" disabled></label>
        {{view unsupportedCodesView}}
        {{view editCodesDisplayView}}
        {{view editCodeSelectionView}}
      </div>

      <div class="form-group">
        {{view attributeDisplayView}}
        {{view attributeEditorView}}
      </div>
      <div class="form-group">
        <label class="control-label"><i class="fa fa-ellipsis-h" aria-hidden="true"></i> EXTENSIONS<input class="sr-only" disabled></label>
        {{view displayExtensionsView}}
        {{view addExtensionsView}}
      </div>
      <div class="form-group">
        <label class="control-label"><i class="fa fa-ellipsis-h" aria-hidden="true"></i> MODIFIER EXTENSIONS<input class="sr-only" disabled></label>
        {{view displayModifierExtensionsView}}
        {{view addModifierExtensionsView}}
      </div>

