<div class="row">
  <div class="measure-title-bar">
    <div class="measure-title-wide">
      <h1 class="short-title"><i class="fa fa-fw fa-tasks" aria-hidden="true"></i> {{cms_id}}
      </h1>

      <span class="actions-container">
        {{#unless component}}
          {{#button "changeMeasurementPeriod" class="btn btn-default"}}MP <span class="sr-only">Measurement Period </span><i class="fa fa-fw fa-calendar" aria-hidden="true"></i> {{measurePeriodYear}}{{/button}}
        {{/unless}}
        {{#unless cql}}
          {{#link "measures/{{hqmf_set_id}}" id="measure-details-button" expand-tokens=true class="btn btn-default btn-primary"}}<span class="sr-only">Measure Details</span>Measure Details{{/link}}
          {{#link "measures/{{hqmf_set_id}}/patient_dashboard" id="patient-dashboard-button" expand-tokens=true class="btn btn-default"}}<span class="sr-only">Patient Dashboard</span>Patient Dashboard{{/link}}
        {{/unless}}
      </span>
    </div>
  </div>

  {{layout-element className="patient-dashboard-view"}}
</div>
