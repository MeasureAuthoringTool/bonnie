<div class="row">
  <div class="col-xs-3">
    Measure details: {{measure.id}}
    {{#each dataCriteriaCategories}}
      <p>
        <b>{{@key}}</b><br>
        {{#collection this}}
          <div class="draggable">{{title}}</div>
        {{/collection}}
      </p>
    {{/each}}
  </div>
  <form class="col-xs-9 form-horizontal">
    <div class="form-group">
      <label for="first" class="col-xs-2 control-label">First name</label>
      <div class="col-xs-10">
        <input type="text" name="first" class="form-control" id="first" placeholder="First name">
      </div>
    </div>
    <div class="form-group">
      <label for="last" class="col-xs-2 control-label">Last name</label>
      <div class="col-xs-10">
        <input type="text" name="last" class="form-control" id="last" placeholder="Last name">
      </div>
    </div>
    {{#collection source_data_criteria class="droppable well" item-view=criteriaViewClass}}
      <div class="source-data-criteria">
        <div class="pull-right">
          {{#button "removeEncounter" class="close"}}&times;{{/button}}
        </div>
        <label>{{definition}}{{#if status}}, {{status}}{{/if}}</label>
        {{#button "toggleDetails" tag="a"}}{{#if title}}{{title}}{{else}}{{definition}}{{/if}}{{/button}}
        <div class="details well" style="display: none">
          <div class="form-group">
            <label>Event Start</label>
            <input type="text" name="start_date" class="form-control" placeholder="xx/xx/xxxx">
          </div>
          <div class="form-group">
            <label>Event End</label>
            <input name="end_date" type="text" class="form-control" placeholder="xx/xx/xxxx">
            <label><input type="checkbox">null</label>
          </div>
          <div>
            {{#button "newValue" class="btn btn-default"}}New Value{{/button}}
          </div>
          <div>
            {{#button "newFieldValue" class="btn btn-default"}}New Field Value{{/button}}
          </div>
        </div>
      </div>
    {{/collection}}
    <input type="submit" class="btn btn-default" value="Save">
  </form>
</div>
