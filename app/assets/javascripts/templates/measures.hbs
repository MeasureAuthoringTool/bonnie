{{!-- <p>Total measures: {{measures.length}}</p> --}}

<div class="dashboard-heading row">
  <div class="measure-col">
    <div class="btn-wrapper pull-right">
      {{#button "importMeasure" class="btn btn-primary"}}<i class="fa fa-upload"></i> Upload{{/button}}
    </div>
    <h1><i class="glyphicon glyphicon-tasks"></i> Measures</h1>
  </div>
  <div class="expected-col">
    <h2>Expected</h2>
  </div>
  <div class="status-col">
    <h2>Status</h2>
  </div>
  <div class="patient-listing-col">
    <h2>Test Patients</h2>
  </div>
</div>

{{#collection class="dashboard-data" item-view='MeasureRowView'}}

  <div class="measure row">
    <div class="measure-col">
      <div class="btn-wrapper pull-right">
        {{#button "updateMeasure" class="btn btn-primary"}}<i class="fa fa-refresh fa-fw"></i> Update{{/button}}
      </div>
      <div class="measure-title">
         <span class="nqf-listing pull-right">
          <span class="sr-only">CMS ID: </span>
          {{cms_id}}
        </span>
        {{#link "measures/{{hqmf_set_id}}" expand-tokens=true}}{{title}}{{/link}}
      </div>
    </div>
    <div class="expected-col">
      {{#unless multiplePopulations}}
        {{view "MeasurePercentageView" model=differences.summary}}
      {{/unless}}
    </div>
    <div class="status-col">
      {{#unless multiplePopulations}}
        {{view "MeasureStatusView" model=differences.summary}}
      {{/unless}}
    </div>
    <div class="patient-listing-col">
      <a href="#measures/{{hqmf_set_id}}/patients/new" class="btn {{#unless patients.length}}btn-primary{{else}}btn-default{{/unless}} pull-right">
        <i class="fa fa-user"></i>
        <i class="fa fa-plus"></i>
        <span class="sr-only">build patient</span>
      </a>
      {{#if multiplePopulations}}
        <span class="patient-listing">{{patients.length}}</span><span class="sr-only"> patients</span>

      {{else}}
        {{view "MeasureFractionView" model=differences.summary}}
      {{/if}}
    </div>
  </div>

  {{#if multiplePopulations}}
    {{#collection differencesCollection}}
      <div class="row population">
        <div class="population-col">
          <div class="population-title">
            <strong>population:</strong> {{title}}
          </div>
        </div>
        <div class="expected-col">
          {{view "MeasurePercentageView" model=differences.summary}}
        </div>
        <div class="status-col">
          {{view "MeasureStatusView" model=differences.summary}}
        </div>
        <div class="patient-listing-col">
          {{view "MeasureFractionView" model=differences.summary}}
        </div>
      </div>
    {{/collection}}
  {{/if}}
{{/collection}}

{{! FIXME view creation/removal should happen as necessary in view, not in handlebars }}
{{view finalizeMeasuresView}}
