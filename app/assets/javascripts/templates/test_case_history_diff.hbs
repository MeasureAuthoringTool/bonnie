<div class="measure-diff">
  {{#if diffView}}
    <div class="row">
      <div class="col-md-6"><h3>{{diff.leftTitle}}</h3></div>
      <div class="col-md-6"><h3>{{diff.rightTitle}}</h3></div>
    </div>
    {{#each diffView}}
      <h4>{{this.title}}</h4>
      <div class="row">
        <div class="col-md-6">
          {{{this.left}}}
        </div>
        <div class="col-md-6">
          {{{this.right}}}
        </div>
      </div>
    {{/each}}
  {{else}}
    <p>Select a historic measure to view diff.</p>
  {{/if}}
</div>
