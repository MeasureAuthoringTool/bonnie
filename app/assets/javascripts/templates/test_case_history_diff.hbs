<div class="measure-diff">
  {{#if diff}}
    {{#each diff.[0]}}
      <h4>{{this.title}}</h4>
      <div class="row">
        <div class="col-md-6">
          {{{this.left}}}
        </div>
        <div class="col-md-6">
          {{{this.right}}}
        </div>
      </div>
    {{/each}}
  {{else}}
    <p>Select a historic measure to view diff.</p>
  {{/if}}
</div>
